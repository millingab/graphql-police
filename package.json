{
  "name": "@entria/graphql-vigilant-bot",
  "version": "0.0.1",
  "author": "Jonathan Cardoso Machado <me@jonathancardoso.com>",
  "dependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "buffer-equal-constant-time": "^1.0.1",
    "content-type": "^1.0.2",
    "dotenv-safe": "^4.0.4",
    "github": "^9.2.0",
    "graphql": "0.10.3",
    "koa": "^2.3.0",
    "lodash": "^4.17.4",
    "node-fetch": "^1.7.1",
    "raw-body": "^2.2.0",
    "jsonwebtoken":"^5.4"
  },
  "devDependencies": {
    "eslint": "3.19",
    "eslint-config-airbnb": "^15.0.1",
    "eslint-plugin-import": "^2.5.0",
    "flow-bin": "^0.48.0",
    "nodemon": "^1.11.0",
    "pre-commit": "^1.2.2",
    "prettier": "^1.4.4"
  },
  "license": "MIT",
  "lint-staged": {
    "*.js": [
      "prettier --write --single-quote true --trailing-comma all --print-width 120",
      "git add"
    ]
  },
  "main": "dist/index.js",
  "pre-commit": "lint:staged",
  "repository": "https://github.com/entria/graphql-vigilant-bot",
  "scripts": {
    "build": "babel src -d dist",
    "flow": "flow",
    "lint": "eslint src/**",
    "lint:staged": "lint-staged",
    "prepublish": "npm run build",
    "prettier": "prettier --write --single-quote true --trailing-comma all --print-width 120 src/**/*.js",
    "start": "npm run build && node dist/index.js",
    "debug": "node-debug dist/index.js",
    "start:watch": "nodemon --ignore dist/ src/index.js --exec babel-node",
    "watch": "babel -w -d ./dist ./src"
  }
}
